<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:paddingTop="40dp"
                android:id="@+id/New_Crops_Description_Image"
                android:src="@drawable/weather_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Crops Names"
                android:textAlignment="center"
                android:id="@+id/New_Crops_Name"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Crops Description"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:id="@+id/New_Crops_Description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Crops Details"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:id="@+id/New_Crops_Details"/>


        </LinearLayout>

    </ScrollView>
</layout>


